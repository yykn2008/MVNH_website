<p id="notice"><%= notice %></p>

<article id="events">
<section>
<p>
  <b>Title:</b>
  <%= @event.title %>
</p>

<p>
  <b>Date:</b>
  <%= @event.date %>
</p>

<p>
  <b>Description:</b>
  <%= @event.description %>
</p>

</section>

<section>
<% if user_signed_in? %>
	<%= link_to 'Edit', edit_event_path(@event) %> |
	<%= link_to 'New Comment', new_comment_path(event_id: @event) %> |
<% end %>
<%= link_to 'Back', events_path %>
</section>

</article>